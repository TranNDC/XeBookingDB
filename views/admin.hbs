 <link rel="stylesheet" href="/css/main.css">
 <link rel="stylesheet" href="/css/style.css">
 <link rel="stylesheet" href="/css/a1.css">
 <link rel="stylesheet" href="/css/c1.css">
 <link rel="stylesheet" href="/css/a2.css">
 <link rel="stylesheet" href="/css/c3.css">
 
 <div class="container ">
     <div class="row justify-content-center align-content-center">
         <div class="col-6">
             <nav>
                 <div class="nav nav-tabs a2-nav-link nav-fill" id="nav-tab" role="tablist">
                     <a class="nav-item nav-link a2-nav-link " id="nav-home-tab" href="/masterdata">Master
                         Data</a>
                     <a class="nav-item nav-link a2-nav-link" id="nav-profile-tab" href="/transaction">Transaction</a>
                     <a class="nav-item nav-link a2-nav-link active" id="nav-contact-tab" href="/admin">Report</a>
                 </div>
             </nav>
         </div>
     </div>
 </div>


 <div class="tab-content">
     <!--
        <div class="tab-pane fade" id="nav-data" role="tabpanel">
            <div class="container-fluid">
            </div>
        </div>

        <div class="tab-pane fade" id="nav-transaction" role="tabpanel">
            <div class="container-fluid">

            </div>
        </div> 
        -->
     <div class="tab-pane fade show active" id="nav-report" role="tabpanel">
         <div class="container-fluid-custom">
             <div class="row">
                 <div class="col-lg-2">
                     <a href="" id="sign-ups" class="box">
                         <img class="c3-img" src="/img/C3/1.jpg" alt="">
                         <div class="text">
                             <div id="num-signup">{{numSignUp}}</div>
                             Online signups
                         </div>
                     </a>

                     <a href="" id="new-visitors" class="box">
                         <img class="c3-img" src="/img/C3/3.jpg" alt="">
                         <div class="text">
                             <div id="num-visit">{{numVisit}}</div>
                             Number of visitors
                         </div>
                     </a>
                     <a href="" id="last-month-sales" class="box">
                         <img class="c3-img" src="/img/C3/2.jpg" alt="">
                         <div class="text">
                             <div id="num-sale">{{numBooking}}</div>
                             Total of bookings
                         </div>
                     </a>
                     <a href="" id="total-revenue-month" class="box">
                         <img class="c3-img" src="/img/C3/4.jpg" alt="">
                         <div class="text">
                             <div id="num-revenue">${{revenue}}</div>
                             Total revenue
                         </div>
                     </a>
                 </div>

                 <div class="col-lg-5 block-center">
                     <div id="name-ad" class="c3-form">
                         <a href="#" role="button" data-toggle="modal" data-target="#myModal">
                             <i class="far fa-calendar-alt icon-change-date"></i>
                         </a>
                         <div class="name-ad-info">
                             <div id="admin-name">Hi <span>{{user.name}}</span></div>
                             <div id="date">Today is </div>

                         </div>

                     </div>

                     <div id="num-of-booking" class="c3-form">
                         {{#if datefrom}}
                         <div class="title-chart">Number of booking bus from {{datefrom}} to {{dateto}}</div>
                         {{else}}
                         <div class="title-chart">Number of booking bus all time</div>
                         {{/if}}
                         <div id="chart_line"></div>
                     </div>

                     <div id="revenue" class="c3-form">
                         {{#if datefrom}}
                         <div class="title-chart">Revenue from {{datefrom}} to {{dateto}}</div>
                         {{else}}
                         <div class="title-chart">Revenue all time</div>
                         {{/if}}
                         <div id="chart_col"></div>
                     </div>


                 </div>

                 <div class="col-lg-5 block-right">
                     <div id="user-visit-book" class="c3-form">
                         <div id="donut-value"></div>
                         <div id="chart_donut"></div>
                         <div class="info-chart">

                             <div class="title-donut">Users visit then book bus</div>
                             {{#if datefrom}}
                             <div class="subtitle-donutC">From {{datefrom}} to {{dateto}}</div>
                             {{else}}
                             <div class="subtitle-donutC">Calculated all time</div>
                             {{/if}}

                             <a href="#" class="btn btn-primaryC" id="refresh" role="button" data-toggle="modal"
                                 data-target="#myModal">REFRESH</a>
                         </div>


                     </div>

                     <div id="bus-type" class="c3-form">
                         <div id="bus-type-value"></div>
                         <div id="chart_bustype"></div>
                         <div class="info-chart">
                             <div class="title-donut">Bus type used most</div>
                             {{#if datefrom}}
                             <div class="subtitle-donutC">From {{datefrom}} to {{dateto}}</div>
                             {{else}}
                             <div class="subtitle-donutC">Calculated all time</div>
                             {{/if}}
                             <a href="#" class="btn btn-primaryC" id="refresh" role="button" data-toggle="modal"
                                 data-target="#myModal">REFRESH</a>
                         </div>
                     </div>

                     <div id="bus-route" class="c3-form">
                         <div class="info-chart-route">
                             {{#if datefrom}}
                             <div class="title-chart">Bus route booked most from {{datefrom}} to {{dateto}}</div>
                             {{else}}
                             <div class="title-chart">Bus route booked most all time</div>
                             {{/if}}

                             <br>
                             <div id="chart_busroute"></div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </div>

 <div class="modal fade" id="myModal">
     <div class="modal-dialog modal-lg">
         <div class="modal-content">

             <!-- Modal Header -->
             <div class="modal-header pb-0">
                 <button type="button" class="close" data-dismiss="modal">&times;</button>
             </div>
             <ul class="nav nav-tabs d-flex align-content-center mb-3 text-center" style="margin: 2em 15%"
                 role="tablist">
                 <li class="nav-item">
                     <a id="title-date-choose" class="nav-link a2-nav-link active" data-toggle="tab" href="#home">
                         Choose date for report</a>
                 </li>
             </ul>
             <!-- Modal body -->
             <div class="modal-body">
                 <!-- <form action="#"> -->

                 <!-- Tab panes -->
                 <div class="tab-content">
                     <div id="home" class="container tab-pane active">
                         <form id="formhome" action="/users/admin/refresh" method="GET">
                             <div class="container pl-5 pr-5">
                                 <div class="row row-custom">
                                     <div class="col-6">
                                         <div class="input-date">
                                             <input placeholder="From" id="datefromID" type="text" name="datefrom"
                                                 class="datepicker-here form-control" data-language='en'
                                                 data-multiple-dates="1"
                                                 data-position='bottom right' autocomplete="off" required />
                                             <i class="far fa-calendar-alt icon-date"></i>
                                         </div>
                                     </div>

                                     <div class="col-6">
                                         <div class="input-date">
                                             <input placeholder="To" id="datetoID" type="text" name="dateto"
                                                 class="datepicker-here form-control" data-language='en'
                                                 data-multiple-dates="1" 
                                                 data-position='bottom right' autocomplete="off" required />
                                             <i class="far fa-calendar-alt icon-date"></i>
                                         </div>
                                     </div>
                                 </div>
                             </div>
                             <button type="submit" class="btn btn-primary float-right  mb-4 mr-4 mt-2" id="ok-btn"
                                 data-dismiss="">OK</button>
                         </form>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </div>


