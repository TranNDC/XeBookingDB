    {{/if}}
    <h3 style="color: #D70303">Enter current password</h3>
    
    
    <form method="POST" action="/users/changepass/newpass">
        <div class="form-group">
            <input type="password" class="form-control-plaintext control-inline my-inpyt-text" name="password" placeholder="Enter password" required/>
